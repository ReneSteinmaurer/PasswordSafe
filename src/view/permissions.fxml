<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PermissionController">
   <children>
      <Label layoutX="248.0" layoutY="14.0" text="Permissions">
         <font>
            <Font size="24.0" />
